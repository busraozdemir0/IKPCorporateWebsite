@using EntityLayer.Concrete
@model List<iletisimMesaj>
@{
    ViewData["Title"] = "IletisimKutusu";
    Layout = "~/Views/Shared/Layout/General/AdminLayout.cshtml";
}

@{
    int sayac = 0;
}
<html class="fixed sidebar-left-collapsed sidebar-left-with-menu js flexbox flexboxlegacy no-touch csstransforms csstransforms3d no-overflowscrolling webkit chrome win js no-mobile-device custom-scroll" style="">
<head>

    <!-- Basic -->
    <meta charset="UTF-8">

    <title>Inbox | Porto Admin - Responsive HTML5 Template</title>
    <meta name="keywords" content="HTML5 Admin Template">
    <meta name="description" content="Porto Admin - Responsive HTML5 Template">
    <meta name="author" content="okler.net">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <!-- Web Fonts  -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800|Shadows+Into+Light" rel="stylesheet" type="text/css">

    <!-- Vendor CSS -->
    <link rel="stylesheet" href="~/StaticFiles/General/vendor/bootstrap/css/bootstrap.css">
    <link rel="stylesheet" href="~/StaticFiles/General/vendor/animate/animate.compat.css">
    <link rel="stylesheet" href="~/StaticFiles/General/vendor/font-awesome/css/all.min.css">
    <link rel="stylesheet" href="~/StaticFiles/General/vendor/boxicons/css/boxicons.min.css">
    <link rel="stylesheet" href="~/StaticFiles/General/vendor/magnific-popup/magnific-popup.css">
    <link rel="stylesheet" href="~/StaticFiles/General/vendor/bootstrap-datepicker/css/bootstrap-datepicker3.css">
    <link rel="stylesheet" href="~/StaticFiles/General/vendor/summernote/summernote-bs4.css">

    <!-- Theme CSS -->
    <link rel="stylesheet" href="~/StaticFiles/General/css/theme.css">

    <!-- Skin CSS -->
    <link rel="stylesheet" href="~/StaticFiles/General/css/skins/default.css">

    <!-- Theme Custom CSS -->
    <link rel="stylesheet" href="~/StaticFiles/General/css/custom.css">

    <!-- Head Libs -->
    <script src="~/StaticFiles/General/vendor/modernizr/modernizr.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.1.js" integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI=" crossorigin="anonymous"></script>

</head>
<body>
    <section>

        <!-- start: header -->
        <header class="header">
            <div class="logo-container">
                <a href="../4.0.0" class="logo">
                    <img src="~/StaticFiles/General/img/logo-modern.png" class="logo-image" width="90" height="24" alt="Porto Admin">
                </a>

                <button class="btn header-btn-collapse-nav d-lg-none" data-bs-toggle="collapse" data-bs-target=".header-nav">
                    <i class="fas fa-bars"></i>
                </button>

            </div>

        </header>
        <!-- end: header -->

        <div class="pt-6 pb-6">
            <!-- start: sidebar -->
            <!-- end: sidebar -->

            <section style="margin-left:0px" role="main" class="content-body">


                <!-- start: page -->
                <section class="content-with-menu mailbox">
                    <div class="content-with-menu-container" data-mailbox="" data-mailbox-view="folder">
                        <div class="inner-menu-toggle">
                            <a href="#" class="inner-menu-expand" data-open="inner-menu">
                                Show Menu <i class="fas fa-chevron-right"></i>
                            </a>
                        </div>


                        <div class="inner-body mailbox-folder ms-0inner">
                            <!-- START: .mailbox-header -->
                            <header class="mailbox-header">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h1 class="mailbox-title font-weight-semibold text-dark text-8 m-0">
                                            <a id="mailboxToggleSidebar" class="sidebar-toggle-btn trigger-toggle-sidebar">
                                                <span class="line"></span>
                                                <span class="line"></span>
                                                <span class="line"></span>
                                                <span class="line line-angle1"></span>
                                                <span class="line line-angle2"></span>
                                            </a>

                                            Gelen Kutusu
                                        </h1>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="search">
                                            <div class="input-group">
                                                <input type="text" class="form-control" name="s" id="s" placeholder="Search...">
                                                <button class="btn btn-default" type="submit"><i class="bx bx-search"></i></button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </header>
                            <!-- END: .mailbox-header -->
                            <!-- START: .mailbox-actions -->

                            <div class="mailbox-actions">
                                <ul class="list-unstyled m-0 pt-3 pb-3">
                                    <li class="ib me-2">
                                        <div class="btn-group">
                                            <a href="#" class="item-action fas fa-chevron-down" data-bs-toggle="dropdown"></a>

                                            <ul class="dropdown-menu" role="menu">
                                                <li class="dropdown-item"><a class="dropdown-link" href="#">All</a></li>
                                                <li class="dropdown-item"><a class="dropdown-link" href="#">None</a></li>
                                                <li class="dropdown-item"><a class="dropdown-link" href="#">Read</a></li>
                                                <li class="dropdown-item"><a class="dropdown-link" href="#">Unread</a></li>
                                                <li class="dropdown-item"><a class="dropdown-link" href="#">Starred</a></li>
                                                <li class="dropdown-item"><a class="dropdown-link" href="#">Unstarred</a></li>
                                            </ul>
                                        </div>
                                    </li>
                                    <li class="ib me-2">
                                        <a class="item-action fas fa-sync" href="#"></a>
                                    </li>
                                    <li class="ib me-2">
                                        <a class="item-action fas fa-tag" href="#"></a>
                                    </li>
                                    <li class="ib">
                                        <button class="item-action fas fa-times text-danger" id="Delete" @*href="/SY/Yonetim/IletisimSil/@ViewBag.id"*@></button>
                                    </li>
                                </ul>
                            </div>
                            <!-- END: .mailbox-actions -->
                            @using (Html.BeginForm("iletisim", "Yonetim", FormMethod.Post,new { @id="mesajForm"}))
                            {

                                <div id="mailbox-email-list" class="mailbox-email-list">
                                    <div class="nano has-scrollbar hovered">
                                        <div class="nano-content" tabindex="0" style="right: -17px;">
                                            @*<div class="checkbox-custom checkbox-text-primary ib">
                                        <input type="checkbox" id="checkBoxAll" name="allcheck" />
                                        </div>*@
                                            @foreach (var item in Model)
                                            {

                                                <ul id="" class="list-unstyled">
                                                    <li class="unread">
                                                        <a href="/SY/Yonetim/IletisimDetay/@item.mesaj_id">
                                                            <div class="col-sender">
                                                                <div class="checkbox-custom checkbox-text-primary ib">
                                                                    <input hidden name="mesaj[@sayac].CheckboxId"value="@item.mesaj_id"/>
                                                                    <input type="checkbox" id="kutu" class="checkId" name="mesaj[@sayac].Status" value="true">
                                                                    <label for="mail1"></label>
                                                                </div>
                                                                <p class="m-0 ib">
                                                                    @item.iletisim_Ad_Soyad
                                                                </p>
                                                            </div>
                                                            <div class="col-mail">
                                                                <p class="m-0 mail-content">
                                                                    <span class="subject">@item.Iletisim_Email &nbsp;–&nbsp; </span>
                                                                    <span class="mail-partial">@item.Iletisim_Mesaj</span>
                                                                </p>
                                                                @*<p class="m-0 mail-date">11:35 am</p>*@
                                                            </div>
                                                        </a>
                                                    </li>
                                                </ul>
                                                sayac++;
                                            }
                                            @*<button type="submit" value="Delete" class="btn btn-sm btn-danger rounded-0" ><i class="fa fa-trash-o"></i> Delete</button>*@
                                        </div>
                                        <div class="nano-pane" style="opacity: 1; visibility: visible;"><div class="nano-slider" style="height: 130px; transform: translate(0px, 0px);"></div></div>
                                    </div>
                                </div>

                            }
                        </div>

                    </div>
                </section>
                <!-- end: page -->
            </section>
        </div>


    </section>

    <!-- Vendor -->
    <script src="~/StaticFiles/General/vendor/jquery/jquery.js"></script>
    <script src="~/StaticFiles/General/vendor/jquery-browser-mobile/jquery.browser.mobile.js"></script>
    <script src="~/StaticFiles/General/vendor/popper/umd/popper.min.js"></script>
    <script src="~/StaticFiles/General/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/StaticFiles/General/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/StaticFiles/General/vendor/common/common.js"></script>
    <script src="~/StaticFiles/General/vendor/nanoscroller/nanoscroller.js"></script>
    <script src="~/StaticFiles/General/vendor/magnific-popup/jquery.magnific-popup.js"></script>
    <script src="~/StaticFiles/General/vendor/jquery-placeholder/jquery.placeholder.js"></script>

    <!-- Specific Page Vendor -->
    <script src="~/StaticFiles/General/vendor/summernote/summernote-bs4.js"></script>

    <!-- Theme Base, Components and Settings -->
    <script src="~/StaticFiles/General/js/theme.js"></script>

    <!-- Theme Custom -->
    <script src="~/StaticFiles/General/js/custom.js"></script>

    <!-- Theme Initialization Files -->
    <script src="~/StaticFiles/General/js/theme.init.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.1.js" integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI=" crossorigin="anonymous"></script>





    <script>
        $("#Delete").click(function() {
            var data = $("#mesajForm").serialize()
            $.post("@Url.Action("IletisimMesajSil","Yonetim")",data)
            .then(function(data){
                $(".unread").remove()
            }).catch(function(error) {
                console.log(error.message)
            })

            //if ($("#kutu").is(":checked")) {
            //    let id = $(".checkId").val();
            //    $.post("/SY/Yonetim/IletisimMesajSil/" + id);
            //    window.location.reload();


            //}
        });



    </script>

    @*  
    *@

</body>
</html>