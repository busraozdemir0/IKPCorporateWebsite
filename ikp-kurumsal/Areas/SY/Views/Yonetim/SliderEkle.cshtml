@using EntityLayer.Concrete
@model AnaSayfaKisim1
@{
    ViewData["Title"] = "Slider Ekle";
    Layout = "~/Views/Shared/Layout/General/AdminLayout.cshtml";
}

<div class="inner-wrapper">
    <!-- start: sidebar -->
    <!-- end: sidebar -->
    <section role="main" class="content-body content-body-modern mt-0">
        <header class="page-header page-header-left-inline-breadcrumb">

            <div class="right-wrapper">
                <ol class="breadcrumbs">
                    <li><span>Home</span></li>

                    <li><span>Slider</span></li>
                </ol>
                <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fas fa-chevron-left"></i></a>
            </div>
        </header>
        <div class="row">
            <div class="col">
                <section class="card card-modern card-big-info">
                    <div class="card-body">
                        <div class="row">
                            @await Component.InvokeAsync("AnaSayfaAdminSliderListele")
                        </div>
                    </div>

                </section>
            </div>
        </div>
        <!-- start: page -->
        <form class="ecommerce-form action-buttons-fixed" action="#" method="post" enctype="multipart/form-data">

            <div class="gizgos" style="display:none;">
                <div class="row">
                    <div class="col">
                        <section class="card card-modern card-big-info">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-lg-12-9 col-xl-13-7">

                                        <div class="row">
                                            <div class="col-sm-7 mb-4">
                                                <div class="card">
                                                    <div class="card-body">
                                                        <div class="form-group row align-items-center mb-3">
                                                            <label class="col-lg-4 col-xl-2 control-label text-lg-end mb-0">Dil</label>
                                                            <div class="col-lg-11 col-xl-10">
                                                                @Html.DropDownListFor(x => x.DilTablosuId,(List<SelectListItem>)ViewBag.dil, new { @class = "form-control", id="SinifSelectBox"} )
                                                            </div>
                                                        </div>

                                                        <div class="form-group row align-items-center mb-3">
                                                            <label class="col-lg-4 col-xl-2 control-label text-lg-end mb-0">Küçük Başlık</label>
                                                            <div class="col-lg-11 col-xl-10">
                                                                <textarea id="editor1" type="text" class="form-control form-control-modern" name="AnaSayfaKucukBaslik1" value=""></textarea>
                                                            </div>
                                                        </div>
                                                        <div class="form-group row align-items-center mb-3">
                                                            <label class="col-lg-4 col-xl-2 control-label text-lg-end mb-0">Büyük Başlık</label>
                                                            <div class="col-lg-11 col-xl-10">
                                                                <textarea id="editor2" type="text" class="form-control form-control-modern" name="AnaSayfaBuyukBaslik1"></textarea>
                                                            </div>

                                                        </div>
                                                        <div class="form-group row align-items-center mb-3">
                                                            <label class="col-lg-4 col-xl-2 control-label text-lg-end mb-0">Açıklama</label>
                                                            <div class="col-lg-11 col-xl-10">
                                                                <textarea id="editor3" type="text" class="form-control form-control-modern" name="AnaSayfaDescription1" rows="2"></textarea>
                                                            </div>

                                                        </div>
                                                        <div class="form-group row pb-4">
                                                            <label class="col-lg-3 control-label text-lg-end pt-2">Resim yükle</label>
                                                            <div class="col-lg-6">
                                                                <div class="fileupload fileupload-new" data-provides="fileupload">
                                                                    <div class="input-append">
                                                                        <div class="uneditable-input">
                                                                            <i class="fas fa-file fileupload-exists"></i>
                                                                            <span class="fileupload-preview"></span>
                                                                        </div>
                                                                        <span class="btn btn-default btn-file">

                                                                            <span class="fileupload-new">Select file</span>
                                                                            <input type="file" name="Resim" required />
                                                                        </span>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-5">
                                                <div class="card">
                                                    <div class="card-body">
                                                        <img class="card-img-top" src="~/Resimler/AnaSayfaEkleResim/1.kısım.jpeg" alt="Card image cap">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
                <div class="row action-buttons">
                    <div class="col-12 col-md-auto">
                        <button type="submit" class="submit-button btn btn-primary btn-px-4 py-3 d-flex align-items-center font-weight-semibold line-height-1" data-loading-text="Loading...">
                            <i class="bx bx-save text-4 me-2"></i> Kaydet
                        </button>
                    </div>
                </div>
            </div>
            <script>
                CKEDITOR.config.autoParagraph = false;
                CKEDITOR.replace('editor1');
                CKEDITOR.replace('editor2');
                CKEDITOR.replace('editor3');

                $(document).ready(function() {
                    $("#hideshow").click(function() {
                        $(".gizgos").slideToggle("slow")
                    });

                });
            </script>

        </form>
    </section>
</div>