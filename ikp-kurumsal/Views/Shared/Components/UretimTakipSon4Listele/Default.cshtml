@model List<EntityLayer.Concrete.UretimTakipYonetimi>

@foreach (var i in Model)
{
    <div class="col-12 col-sm-6 col-lg-3">
        <div class="portfolio-item">
            <a href="/Home/UretimTakipYonetimiDetay/@i.UretimTakip_id">
                <span class="thumb-info thumb-info-lighten thumb-info-no-borders border-radius-0">
                    <span class="thumb-info-wrapper border-radius-0">
                        <img src="~/Resimler/UretimTakip/@i.UretimTakip_Resim_Yol" class="img-fluid border-radius-0" alt="">
                        <span class="thumb-info-title">
                            <span class="thumb-info-inner text-white">@Html.Raw(i.UretimTakip_name)</span>
                        </span>
                        <span class="thumb-info-action">
                            <span class="thumb-info-action-icon bg-dark opacity-8"><i class="fas fa-plus"></i></span>
                        </span>
                    </span>
                </span>
            </a>
        </div>
    </div>
}