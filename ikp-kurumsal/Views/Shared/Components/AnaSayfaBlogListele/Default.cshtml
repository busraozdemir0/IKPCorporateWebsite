@using EntityLayer.Concrete
@model List<Blog>

<div class="row">
    <div class="col-lg-12 text-center">
        <h2 class="font-weight-normal text-6 mb-5"><strong class="font-weight-extra-bold">Blog Sayfamız</strong></h2>
    </div>
</div>
<div class="row recent-posts pb-4 mb-5">
@foreach(var i in Model)
{
    <div class="col-md-6 col-lg-3 mb-4 mb-lg-0 mt-5">
        <article>
            <div class="row">
                <div class="col-auto pr-0"  style="width:95px; height:95px">
                    <div class="image">
                            <img src="~/Resimler/Bloglar/@i.Blog_resim_yol" class="img-fluid mb-2" alt="">
                    </div>
                </div> 
                <div class="col pl-1">
                    <h4 class="line-height-3 text-4"><a href="~/Front/Index/CozumlerAltIcerik" class="text-dark">@Html.Raw(@i.Blog_baslik)</a></h4>
                    <p class="line-height-5 pr-3 mb-1">@Html.Raw(@i.Blog_icerik.Substring(0, i.Blog_icerik.Substring(0, 50).LastIndexOf(" "))) ... </p>
                    <a href="/Home/BlogDetay/@i.Blog_id" class="read-more text-color-dark font-weight-bold text-2">Devamını Oku <i class="fas fa-chevron-right text-1 ml-1"></i></a>
                </div>
            </div>
        </article>
    </div>
    }
</div>
<div class="row mb-5">
    <div class="col-lg-12 text-center">
        <a href="/Home/Blog/" class="btn btn-dark btn-px-5 btn-py-2 font-weight-bold text-color-light rounded-0 text-2">Blog Sayfası</a>
    </div>
</div>