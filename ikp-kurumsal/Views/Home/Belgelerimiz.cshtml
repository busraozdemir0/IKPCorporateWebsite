<body data-plugin-page-transition>

	<div class="body">


		<div role="main" class="main">

			<section class="page-header page-header-modern bg-color-light-scale-1 page-header-md ">
				<div class="container-fluid">
					<div class="row align-items-center">

						<div class="col">
							<div class="row">
								<div class="col-md-12 align-self-center p-static order-2 text-center">
									<div class="overflow-hidden pb-2">
										<h2 class="text-dark font-weight-bold text-9 appear-animation" data-appear-animation="maskUp" data-appear-animation-delay="100">Belgelerimiz</h2>
									</div>
								</div>
								<div class="col-md-12 align-self-center order-1">
									<ul class="breadcrumb d-block text-center appear-animation" data-appear-animation="fadeIn" data-appear-animation-delay="300">
										<li><a href="#">Anasayfa</a></li>
										@*											<li><a href="#">Portfolio</a></li>
										*@
										<li class="active">Belgelerimiz</li>
									</ul>
								</div>
							</div>
						</div>

					</div>
				</div>
			</section>

			<div class="container">
				<div class="row">
					<div class="col">
						<div class="appear-animation animated fadeIn appear-animation-visible" data-appear-animation="fadeIn" data-appear-animation-delay="500" style="animation-delay: 500ms;">
							<ul class="nav nav-pills sort-source sort-source-style-3" data-sort-id="portfolio" data-option-key="filter" data-plugin-options="{'layoutMode': 'masonry', 'filter': '*'}">
								<li class="nav-item active" data-option-value="*"><a class="nav-link text-1 text-uppercase active" href="#">Tümünü Göster</a></li>
								@foreach (var item in Model.GroupBy(x => x.BelgeKategori))
								{
									<li class="nav-item" data-option-value=".kategori@(item.Key.Id) "><a class="nav-link text-1 text-uppercase" href="#">@item.Key.Ad</a></li>
								}

							</ul>

							<div class="sort-destination-loader mt-4 pt-2 sort-destination-loader-loaded">
								<div class="row portfolio-list sort-destination" data-sort-id="portfolio" data-filter="*" style="position: relative; height: 772.14px;">
									@foreach (var item in Model)
									{
										<div class="col-sm-6 col-lg-3 isotope-item kategori@(item.BelgeKategoriId)">
											<div class="portfolio-item">
												<div>
													<span class="thumb-info thumb-info-centered-info thumb-info-no-borders border-radius-0">
														<span class="thumb-info-wrapper border-radius-0">
															<img src="~/Resimler/Belgeler/@item.Belge_Resim_Yol" class="img-fluid border-radius-0" alt="">
															<span class="thumb-info-title">
																<span class="thumb-info-inner">@item.Belge_isim</span>
																@*<span class="thumb-info-type">Brand</span>*@
															</span>
														</span>
													</span>
												</div>
											</div>
										</div>
									}


								</div>
								<div class="bounce-loader"><div class="bounce1"></div><div class="bounce2"></div><div class="bounce3"></div></div>
							</div>
						</div>
					</div>
				</div>
			</div>


		</div>
	</div>




